# LIHC Platform Production Configuration

# Database Configuration
DATABASE_URL=postgresql://lihc_user:SECURE_PASSWORD_CHANGE_ME@postgres:5432/lihc_platform
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=SECURE_SECRET_KEY_CHANGE_ME_64_CHARACTERS_MINIMUM_FOR_PRODUCTION
JWT_SECRET_KEY=SECURE_JWT_SECRET_KEY_CHANGE_ME_64_CHARACTERS_MINIMUM
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Admin Configuration
ADMIN_PASSWORD=SECURE_ADMIN_PASSWORD_CHANGE_ME

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS Configuration (restrict in production)
ALLOWED_ORIGINS=https://your-domain.com,https://api.your-domain.com
ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# File Upload
MAX_UPLOAD_SIZE=500MB
UPLOAD_PATH=./uploads
RESULTS_PATH=./results

# Email Configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@your-domain.com
SMTP_PASSWORD=YOUR_EMAIL_PASSWORD
SMTP_TLS=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8050
API_WORKERS=4

# Dashboard Configuration
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8051

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=SECURE_GRAFANA_PASSWORD

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/lihc.log

# Analysis Configuration
MAX_CONCURRENT_ANALYSES=5
ANALYSIS_TIMEOUT_MINUTES=60
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Security
RATE_LIMIT_PER_MINUTE=100
SESSION_TIMEOUT_MINUTES=60
ENABLE_API_DOCS=false

# SSL Configuration
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Performance
CACHE_TTL_SECONDS=3600
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30